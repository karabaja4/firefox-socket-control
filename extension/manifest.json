{

  "description": "Control your Firefox from a Native Messaging app.",
  "manifest_version": 2,
  "name": "NativeControl",
  "version": "1.2",
  "icons": {
    "48": "icons/app.svg"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "native_control@karabaja4",
      "strict_min_version": "50.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/app.svg"
  },
  
  "permissions": ["nativeMessaging"]

}
